@model BulkyBook.Models.Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-while py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
       <form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">

        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" type="text" class="form-control" />

        </div>

        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" type="number" class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 btn-outline-light col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}