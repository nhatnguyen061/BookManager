@page
@model BulkyRazor_Temp.Pages.Categories.IndexModel


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-while py-2">List Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
            </div>

            <div class="col-6 text-end pb-3">
                <a asp-page="/Categories/create" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Create Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.CategoryList.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            @obj.DisplayOrder
                        </td>
                        <td>
                            <a asp-page="/Categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-page="/Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
